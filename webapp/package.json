{
	"name": "DIDimo - webapp",
	"author": {
		"name": "Forkbomb",
		"email": "info@forkbomb.com"
	},
	"description": "Your trustworthy compliance checker for decentralized identity solutions",
	"version": "0.0.1",
	"type": "module",
	"engines": {
		"node": ">=17",
		"pnpm": ">=8"
	},
	"scripts": {
		"predev": "bun run svelte-kit sync && bun run generate:definitions",
		"dev": "vite dev",
		"prebuild": "bun run svelte-kit sync && bun run generate:definitions",
		"build": "vite build",
		"bin": "bun run build && bun build --compile --minify-whitespace --minify-syntax --target bun --outfile didimo-ui ./build/index.js",
		"preview": "vite preview --port 5100",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "bun run test:unit -- --run && bun run test:e2e",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"serve": "bun run build && bun run preview --host --port 5100",
		"generate:collections-models": "bun run ./src/modules/pocketbase/collections-models/generate.collections-models.ts",
		"generate:types": "bun x pocketbase-typegen --db ../pb_data/data.db --out src/modules/pocketbase/types/index.generated.ts && bun run generate:types-extra",
		"generate:types-extra": "bun run src/modules/pocketbase/types/generate.types-extra.ts",
		"generate:features": "bun run src/modules/features/generate.features-list.ts",
		"generate:roles": "bun run ./src/modules/organizations/generate.roles-list.ts",
		"generate:schema-types": "bun json2ts -i ../schemas/openid-credential-issuer.schema.json -o ./src/lib/types/openid-credential-issuer.ts",
		"generate:definitions": "bun run generate:collections-models && bun run generate:types && bun run generate:features && bun run generate:roles && bun run generate:schema-types",
		"i18n:remove-unused-strings": "bun run ./src/modules/i18n/remove-unused-strings.ts",
		"i18n:lint": "bun run inlang lint --project ./project.inlang",
		"i18n:lint:en": "bun run inlang lint --project ./project.inlang --languageTags en",
		"i18n:machine-translate": "inlang machine translate --project project.inlang",
		"emails": "rm -rf static/emails/* && mkdir -p static/emails && find ./ -name _components -prune -o -name '*.mjml' -exec sh -c 'mjml \"$1\" -o static/emails/$(basename \"${1%.mjml}.html\")' sh {} \\;",
		"postemails": "node ./emails/_generateEmailList.mjs"
	},
	"devDependencies": {
		"@inlang/cli": "^2.18.1",
		"@inlang/paraglide-js": "2.0.2",
		"@internationalized/date": "^3.7.0",
		"@lucide/svelte": "^0.484.0",
		"@playwright/test": "^1.45.3",
		"@sveltejs/kit": "^2.17.2",
		"@sveltejs/vite-plugin-svelte": "^4.0.4",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@types/eslint": "^9.6.0",
		"@types/lodash": "^4.17.13",
		"autoprefixer": "^10.4.20",
		"bits-ui": "^1.3.16",
		"clsx": "^2.1.1",
		"dotenv": "^16.4.7",
		"eslint": "^9.22.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"formsnap": "^2.0.0",
		"globals": "^15.15.0",
		"json-to-ts": "^2.1.0",
		"lucide-svelte": "^0.479.0",
		"mode-watcher": "^0.5.1",
		"paneforge": "^1.0.0-next.4",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.24.1",
		"svelte-adapter-bun": "^0.5.2",
		"svelte-check": "^4.1.5",
		"svelte-sonner": "^0.3.28",
		"sveltekit-superforms": "^2.24.0",
		"tailwind-merge": "^2.6.0",
		"tailwind-variants": "^0.2.1",
		"tailwindcss": "^3.4.17",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.27.0",
		"vite": "^5.4.14",
		"vitest": "^2.1.9",
		"zod": "^3.24.2"
	},
	"dependencies": {
		"@codemirror/lang-json": "^6.0.1",
		"@forkbombeu/temporal-ui": "github:ForkbombEu/temporal-ui",
		"@melt-ui/svelte": "^0.86.4",
		"@types/node": "^22.13.11",
		"date-fns": "2.29",
		"date-fns-tz": "1.3",
		"dompurify": "^3.2.5",
		"effect": "^3.14.1",
		"json-schema-to-typescript": "^15.0.4",
		"lodash": "^4.17.21",
		"marked": "^15.0.8",
		"mjml": "^4.15.3",
		"nanoid": "^5.1.5",
		"pocketbase": "~0.25.2",
		"qrcode-generator": "^1.4.4",
		"runed": "^0.15.4",
		"scrollama": "^3.2.0",
		"sqlite": "^5.1.1",
		"sqlite3": "^5.1.7",
		"svelte-codemirror-editor": "^1.4.1",
		"svelte-loading-spinners": "^0.3.6",
		"thememirror": "^2.0.1",
		"type-fest": "^4.37.0",
		"zenroom": "^4.47.0"
	}
}
